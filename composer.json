{
    "name": "ql/mcp-common",
    "description": "Common library for Quicken Loans PHP projects",

    "type": "library",
    "keywords": [ "mcp", "quickenloans" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Nagi",
            "email": "mattnagi@quickenloans.com"
        },
        {
            "name": "Steve Kluck",
            "email": "stevekluck@quickenloans.com"
        },
        {
            "name": "Matt Colf",
            "email": "mattcolf@quickenloans.com"
        }
    ],

    "autoload": {
        "psr-4": { "QL\\MCP\\Common\\": "src\\" }
    },
    "archive": {
        "exclude": [ "/testing", "/phpunit.xml.dist" ]
    },

    "require": {
        "php": "~5.6 || ~7.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "phpunit/php-invoker": "*",

        "paragonie/random_compat": "~1.1",
        "psr/log": "*",

        "symfony/config": "~2.8",
        "symfony/dependency-injection": "~2.8",
        "symfony/yaml": "~2.8"
    },

    "suggest": {
        "paragonie/random_compat": "~1.1 or PHP7 are required for GUID and OpaqueProperty"
    }
}
