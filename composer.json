{
    "name": "ql/mcp-common",
    "description": "Common library for Quicken Loans PHP projects",

    "type": "library",
    "keywords": [ "mcp", "quickenloans" ],
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "steve@kluck.engineering" }
    ],

    "autoload": {
        "psr-4": { "QL\\MCP\\Common\\": "src\\" }
    },
    "archive": {
        "exclude": [ "/testing", "/phpunit.xml.dist" ]
    },

    "require": {
        "php": "~7.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "phpunit/php-invoker": "*",

        "psr/log": "*",

        "symfony/config": "~2.8",
        "symfony/dependency-injection": "~2.8",
        "symfony/yaml": "~2.8"
    }
}
